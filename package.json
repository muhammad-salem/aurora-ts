{
  "name": "aurora-ts",
  "version": "0.1.2",
  "description": "create and define a usable 'custom elements', that compatible with other frameworks, using Typescript",
  "homepage": "https://github.com/salemebo/aurora-ts",
  "author": "Mohamed Salem",
  "license": "MIT License",
  "main": "esm2020/aurora.js",
  "module": "esm2020/aurora.js",
  "esm2020": "esm2020/aurora.js",
  "types": "esm2020/aurora.d.ts",
  "esm2015": "esm2015/aurora.js",
  "amd":"amd/aurora.bundle.js",
  "scripts": {
    "buildw": "tsc -b -w",
    "build2020": "tsc -p src/tsconfig.esm2020.json",
    "build2015": "tsc -p src/tsconfig.esm2015.json",
    "buildamd": "tsc -p src/tsconfig.amd.json",
    "build": "rm -rf esm20* && rm -rf amd && rm -rf public && tsc && tsc --build",
    "serve": "serve",
    "test": "tsc -b -v test/tsconfig.test.json",
    "testw": "tsc -b -v -w test/tsconfig.test.json",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^14.0.26",
    "serve": "^11.3.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "keywords": [
    "typescript",
    "custom-elements",
    "html",
    "tsx",
    "dependency-injection",
    "reflect-metadata",
    "services",
    "component",
    "directive",
    "pipe",
    "template-syntax",
    "amgular",
    "react"
  ]
}
