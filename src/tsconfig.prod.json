{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2015",
		"outDir": "../dist/",
		"rootDir": ".",
		"typeRoots": [
			"./types",
			"../node_modules/@types"
		],
		"noEmitHelpers": true,
		"sourceMap": false,
		"declarationMap": false,
		"declarationDir": "../types/"
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx"
	],
	"files": [
		"aurora.ts"
	],
	"compileOnSave": true
}